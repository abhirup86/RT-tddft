&inputtddft
    job = 'optical'
    prefix = 'graphene'
    tmp_dir = './out/'
    dt = 2.0d0                 ! attoseconds (1e-18 s)
    nstep = 200                ! 5000-10000 typically
    e_direction = 3            ! 1=x, 2=y, 3=z
    e_strength = 0.01          ! E-field strength (1/Angstrom)
    e_mirror = .true.
    e_pstart = 0.005d0
    e_pend = 0.245d0
    e_nstart = 0.255d0
    e_nend = 0.495d0
    e_volt = 0.0735d0
    e_decay = 0.0025d0         ! decays to zero after 400 steps
/
