&control
	calculation = 'scf'
	restart_mode='from_scratch'
	prefix='graphene'
	pseudo_dir = '../../../pseudo',
	outdir = './out'

/
&system
	ibrav=4
	celldm(1)=4.7243
	celldm(3)=3.92
	nat=2
	ntyp=1
	ecutwfc=25.0
	ecutrho=350.0
	occupations='smearing'
	smearing='gaussian'
	degauss=0.01

/
&electrons
	diagonalization='david'
	electron_maxstep = 100
	mixing_mode='plain'
	mixing_beta=0.1
	conv_thr = 1.0e-8

/
ATOMIC_SPECIES
C 12.011 C.pbe-mt_gipaw.UPF

ATOMIC_POSITIONS (angstrom)
C 0.000000000 0.000000000 0.000000000
C 1.232850116 0.706423116 0.000000000

K_POINTS {automatic}
8 8 1 0 0 0
